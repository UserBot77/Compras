<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Compras.View.Cadastro">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Minhas Compras" /> 
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cadastro:" TextColor="Black" FontSize="27" Margin="5, 10, 10, 0" />

            <Entry x:Name="txt_Produto" Placeholder="Produto" Margin="5, 0, 5, 0" />
            <Entry x:Name="txt_PrecoUnitario" Placeholder="Preço Unitário" Margin="5, 0, 5, 0" Keyboard="Numeric"
                   />
            <Entry x:Name="txt_Qntd" Placeholder="Quantidade" Margin="5, 0, 5, 0" Keyboard="Numeric" />
            <Entry x:Name="txt_Descricao" Placeholder="Descrição" Margin="5, 0, 5, 0" />

            <Button Text="Adicionar" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>